<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SIT313_Assignment2.Details">
  <StackLayout Spacing="10" x:Name="layout"
               Padding="10"
               >
    <StackLayout  BackgroundColor="#f2e6d9" Padding="10" >
      <Label      x:Name="Name"
                      Text="Food Name"
                       FontSize="Medium"
                     TextColor="Maroon"
                />


    </StackLayout>

    <Image
       x:Name="Image"
         Source="food.png"
        WidthRequest="200"
         HeightRequest="200"
                    
               />
    <StackLayout  BackgroundColor="#f2e6d9" Padding="10" >
      <StackLayout Orientation="Horizontal"   HorizontalOptions ="Fill" BackgroundColor="#f2e6d9" Padding="10" >



      </StackLayout>


      <Label  x:Name="Description"
          Text="This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food.This is a nice food."
          FontSize="Small"
              TextColor="Black"
                />
      <StackLayout Orientation="Horizontal"   HorizontalOptions ="Center" VerticalOptions="Center" >
        <Label
            Text="Price"
            FontSize="Micro"
            TextColor="Maroon"
            HorizontalOptions ="Center" VerticalOptions="Center"
      />
        <Label
            x:Name="Price"
           Text="$100"
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand"
           FontSize="Large"
            WidthRequest="60"
						
          TextColor="Gray"
		
            />
        <Label
          Text="Qty"
          FontSize="Micro"
          TextColor="Maroon"
          HorizontalOptions ="Center" VerticalOptions="Center"
      />
        <Entry
          x:Name="Qty"
          Text="1"
          Keyboard="Numeric"
          WidthRequest="50"
          BackgroundColor="#DBDBDB"
          FontSize="Small"
          TextColor="Black"
        
        />
        <Button
        Text="Add Cart"
        Clicked="Add_btn_Clicked"
						BackgroundColor="Maroon"
						TextColor="White"
						WidthRequest="100"
						
      />
      </StackLayout>
    </StackLayout>

  </StackLayout>
</ContentPage>